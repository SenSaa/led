<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RED LED Notification"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#e8991912" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREEN  LED Notification"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:textColor="#e422d931"
        android:backgroundTint="#ff000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLUE LED Notification"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#ec182a80" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PINK LED"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:textColor="#e6ea418e"
        android:backgroundTint="#ff000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PURPLE LED"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#e4502684" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SKY BLUE LED"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal"
        android:textColor="#c97ddef3"
        android:backgroundTint="#ff000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silver LED"
        android:id="@+id/button7"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#7fb0b4b3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Orange LED"
        android:id="@+id/button8"
        android:layout_gravity="center_horizontal"
        android:textColor="#d9dc6119"
        android:backgroundTint="#ff000000" />

</LinearLayout>
